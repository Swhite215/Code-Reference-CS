    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Debugger On Node.JS - Server",
            "program": "${workspaceFolder}/public-server.js",
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "pwa-node"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Debugger On Node.JS - File",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${file}"
        }
    ]
}